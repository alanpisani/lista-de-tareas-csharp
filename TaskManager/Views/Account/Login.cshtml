@model TaskManager.ViewModel.LoginViewModel
@{
	ViewData["Title"] = "Iniciar sesión";
}

<div class="d-flex flex-column justify-content-center align-items-center gap-3">
	<h2>@ViewData["Title"]</h2>

	<form asp-action="Login" method="POST" class="d-flex flex-column gap-3 w-50 card shadow p-3">
		<div class="form-group d-flex flex-column gap-2">
			<label asp-for="Username"></label>
			<input asp-for="Username" type="text" placeholder="Nombre de usuario" class="form-control" />
			<span asp-validation-for="Username" class="text-danger"></span>
		</div>
		<div class="form-group d-flex flex-column gap-2">
			<label asp-for="Password"></label>
			<input asp-for="Password" type="password" placeholder="Contraseña" class="form-control" />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary align-self-center">Iniciar sesión</button>
	</form>
	@if (ViewBag.Error != null)
	{
		<div class="alert alert-danger w-50 text-center">
			@ViewBag.Error
		</div>
	}
</div>
